{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "docs/spec/metricsets/sample.json",
    "type": ["object", "null"],
    "description": "A single metric sample.",
    "properties": {
        "value": {"type": "number"},
        "values": {
	  "type": "array",
	  "minItems": 0,
	  "items": {
            "type": "number"
	  }
	},
        "counts": {
	  "type": "array",
	  "minItems": 0,
	  "items": {
            "type": "integer"
	  }
	}
    },
    "anyOf": [
      {"required": ["value"]},
      {"required": ["values", "counts"]}
    ]
}
